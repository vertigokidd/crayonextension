{
  "manifest_version": 2,

  "name": "getYourCrayon (alpha)",
  "description": "Draw on the web.",
  "version": "0.1.6",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
  {
    "run_at": "document_end",
    "matches": ["<all_urls>"],
    "exclude_matches":["https://twitter.com/intent/tweet*"],
    "js": ["jquery.js",
    "jquery-ui.js",
    "paper.js",
    "farbtastic.js",
    "colorpicker.js",
    "contentscript.js"],
    "css": ["contentscript.css", "farbtastic.css"]
    }
  ],

  "web_accessible_resources": ["drawController.js", "wheel.png", "marker.png", "mask.png"],

  "browser_action": {
    "default_icon": "icon16.png",
    "default_title": "getYourCrayon"
  },


  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}
